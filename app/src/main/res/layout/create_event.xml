<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    tools:context=".myActivities.CreateEvents">

        <RelativeLayout
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/exit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/close_icon"
                android:layout_alignParentLeft="true"
                android:onClick="ClosePage"/>

            <TextView
                android:id="@+id/create_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Event"
                android:textColor="#1B223C"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                style="@style/Toolbar_Title"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textColor="#1B223C"
                style="@style/Main_Header"
                android:background="#ffffff"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                android:onClick="createEvent"/>

        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/Sub_Header"
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="12dp" />

            <EditText
                style="@style/Login_Body"
                android:id="@+id/title_input"
                android:background="@drawable/edit_text_style_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:inputType="text"
                android:maxHeight="?actionBarSize"
                android:maxLines="1"
                android:layout_marginHorizontal="24dp"
                android:minHeight="?actionBarSize"
                android:padding="12dp"/>

            <TextView
                style="@style/Sub_Header"
                android:id="@+id/event_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Type"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="12dp" />

            <Spinner
                style="@style/Login_Label"
                android:id="@+id/types"
                android:background="@drawable/edit_text_style_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:inputType="text"
                android:maxHeight="?actionBarSize"
                android:maxLines="1"
                android:minHeight="?actionBarSize"
                android:spinnerMode="dropdown" />

            <TextView
                style="@style/Sub_Header"
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="12dp"/>

            <!-- <DatePicker
                android:id="@+id/enter_date"
                android:layout_marginHorizontal="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="calendar"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:background="@color/colorPrimary"
                android:calendarViewShown="false" /> -->

            <EditText
                android:id="@+id/date_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Date"
                style="@style/Login_Edittext"
                android:padding="12dp"/>

            <TextView
                style="@style/Sub_Header"
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="12dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TimePicker
                    android:id="@+id/start_time"
                    android:layout_marginHorizontal="24dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:timePickerMode="spinner" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="to"
                    style="@style/Sub_Header"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"/>

                <TimePicker
                    android:id="@+id/end_time"
                    style="@style/timepicker_style"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_toRightOf="@id/to"
                    android:layout_marginHorizontal="24dp"
                    android:timePickerMode="spinner" />

            </RelativeLayout>

            <TextView
                style="@style/Sub_Header"
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                style="@style/Login_Body"
                android:id="@+id/location_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style_selector"
                android:autofillHints=""
                android:inputType="text"
                android:maxHeight="?actionBarSize"
                android:maxLines="1"
                android:minHeight="?actionBarSize"
                android:layout_marginHorizontal="24dp"
                android:padding="12dp"/>

            <TextView
                style="@style/Sub_Header"
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <EditText
                style="@style/Login_Body"
                android:id="@+id/description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style_selector"
                android:autofillHints=""
                android:inputType="textMultiLine"
                android:maxHeight="?actionBarSize"
                android:maxLines="10"
                android:padding="12dp"
                android:minHeight="?actionBarSize"
                android:layout_marginHorizontal="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/poster"
                    style="@style/Sub_Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="24dp"
                    android:text="Upload an image" />

                <Button
                    android:id="@+id/upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Browse"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="4dp"
                    android:minHeight="1dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    style="@style/Browse_Button"/>

            </LinearLayout>


            <TextView
                style="@style/Sub_Header"
                android:id="@+id/telegram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telegram Group Link (Optional)"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                style="@style/Login_Label"
                android:id="@+id/telegram_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_style_selector"
                android:autofillHints=""
                android:inputType="text"
                android:maxHeight="?actionBarSize"
                android:maxLines="1"
                android:minHeight="?actionBarSize"
                android:layout_marginHorizontal="24dp"
                android:padding="12dp"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>