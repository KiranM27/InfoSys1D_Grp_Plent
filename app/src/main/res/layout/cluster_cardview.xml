<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cluster_header"
            style="@style/Main_Header"
            android:text="@string/fifth_row_activities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"/>

        <TextView
            android:id="@+id/see_all_fr"
            style="@style/See_All"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/see_all"
            android:textAlignment="textEnd"
            android:layout_margin="14dp"
            android:gravity="end" />

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_height="1dp"
        android:background="#E8E8E8"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/fr_image_1"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="10dp"
                    android:onClick="redirectToEventsPage"
                    />

                <ImageView
                    android:id="@+id/fr_image_2"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/fr_image_3"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/fr_image_4"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/fr_image_5"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="10dp" />

                <ImageView
                    android:id="@+id/fr_image_6"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginRight="10dp" />

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</androidx.cardview.widget.CardView>