<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/event_card_linear_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/event_card"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_title"
                    style="@style/Calendar_Title"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Athletics Introduction Session"/>

                <TextView
                    android:id="@+id/event_time"
                    style="@style/Calendar_body"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginBottom="12dp"
                    android:text="6.30pm - 8.30pm, SUTD Track"/>

            </LinearLayout>

            <Button
                android:id="@+id/right_arrow_button"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/right_arrow_red"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_height="1dp"
        android:background="#E8E8E8"/> -->

</LinearLayout>