    <style name="Disabled_Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#ACACAC</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/disabled_button</item>
    </style>

    <style name="Login_Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorDisabled</item>
    </style>

    <style name="Login_Header" parent="@style/Main_Header">
        <item name="android:layout_marginHorizontal">24dp</item>
    </style>

    <style name="Login_Label" parent="@style/Login_Body">
        <item name="android:layout_marginHorizontal">24dp</item>
    </style>

    <style name="Login_Edittext" parent="@style/Login_Light">
        <item name="android:layout_marginHorizontal">24dp</item>
    </style>

    <style name="Login_CheckboxText" parent="@style/Login_Label">
        <item name="android:textSize">12dp</item>
    </style>

