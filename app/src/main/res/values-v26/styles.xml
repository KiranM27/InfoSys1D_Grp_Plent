<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1B223C</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#FF6160</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#1B223C</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorAccent">#FF6160</item>
    </style>

    <style name="Main_Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
    </style>

    <style name="Sub_Header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
    </style>

    <style name="Post_Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_regular</item>
    </style>

    <style name="Login_Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_regular</item>
    </style>

    <style name="Login_Light" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#717171</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_regular</item>
    </style>

    <style name="Warning" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF6160</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
    </style>

    <style name="See_All" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FF6160</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
    </style>

    <style name="Toolbar_Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_demi</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Calendar_Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Calendar_body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_regular</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Primary_Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:colorBackground">#1B223C</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="Secondary_Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#1B223C</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/secondary_button_stroke</item>
    </style>

    <style name="Cancel_Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textColor">#FF6160</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/avenirnextcyr_medium</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/cancel_button_stroke</item>
